<%-
fields = @fields
if fields
  extra_fields = fields.collect { |k,v| "--field #{k}=#{v}" }.join(" ")
else
  extra_fields = ''
end
-%>
#!/bin/bash
# logstash-forwarder daemon
# chkconfig: 345 20 80
# description: logstash-forwarder daemon
# processname: logstash-forwarder

DAEMON_PATH="/opt/logstash-forwarder/"
DAEMON="bin/logstash-forwarder.sh"
logstash-forwarder_LOG="/var/log/logstash-forwarder.log"
<% if json_conf %>
DAEMONOPTS="-config /etc/logstash-forwarder/<%= @name %>/logstash-forwarder.conf"
<% else %>
DAEMONOPTS="--ssl-ca-path /etc/logstash-forwarder/<%= @name %>/ca.crt --host <%= @host %> --port <%= @port %> <%= extra_fields %> <%= @logfiles %>"
<% end %>

NAME="logstash-forwarder-<%= @name %>"
DESC="logstash-forwarder-<%= @name %>"
PIDFILE=/var/run/$NAME.pid
SCRIPTNAME=/etc/init.d/$NAME

case "$1" in
start)
	printf "%-50s" "Starting $NAME..."
	cd $DAEMON_PATH
	PID=`$DAEMON $DAEMONOPTS >> $logstash-forwarder_LOG 2>&1 & echo $!`
	#echo "Saving PID" $PID " to " $PIDFILE
        if [ -z $PID ]; then
            printf "%s\n" "Fail"
        else
            echo $PID > $PIDFILE
            printf "%s\n" "Ok"
        fi
;;
status)
        printf "%-50s" "Checking $NAME..."
        if [ -f $PIDFILE ]; then
            PID=`cat $PIDFILE`
            if [ -z "`ps axf | grep ${PID} | grep -v grep`" ]; then
                printf "%s\n" "Process dead but pidfile exists"
                exit 1
            else
                echo "Running"
                exit 0
            fi
        else
            printf "%s\n" "Service not running"
            exit 1
        fi
;;
stop)
        printf "%-50s" "Stopping $NAME"
            PID=`cat $PIDFILE`
            cd $DAEMON_PATH
        if [ -f $PIDFILE ]; then
            kill -HUP $PID
            printf "%s\n" "Ok"
            rm -f $PIDFILE
        else
            printf "%s\n" "pidfile not found"
        fi
;;

restart)
  	$0 stop
  	$0 start
;;

*)
        echo "Usage: $0 {status|start|stop|restart}"
        exit 1
esac
